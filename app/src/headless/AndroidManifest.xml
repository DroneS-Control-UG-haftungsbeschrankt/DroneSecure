<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dronescontrol.dronesecure">

    <permission
        android:name="com.dronescontrol.dronesecure.CONTROL_VPN"
        android:protectionLevel="normal" />

    <application android:name=".RethinkDnsApplication">
        <provider
            android:name=".provider.ApplicationProvider"
            android:authorities="com.dronescontrol.dronesecure.appprovider"
            android:enabled="true"
            android:exported="true"
            android:permission="com.dronescontrol.dronesecure.CONTROL_VPN" />
        <provider
            android:name=".provider.BlocklistProvider"
            android:authorities="com.dronescontrol.dronesecure.blocklistprovider"
            android:enabled="true"
            android:exported="true"
            android:permission="com.dronescontrol.dronesecure.CONTROL_VPN" />
        <provider
            android:name=".provider.DomainRuleProvider"
            android:authorities="com.dronescontrol.dronesecure.domainrulesprovider"
            android:enabled="true"
            android:exported="true"
            android:permission="com.dronescontrol.dronesecure.CONTROL_VPN" />

        <receiver
            android:name=".receiver.BraveStartReceiver"
            android:exported="true"
            android:permission="com.dronescontrol.dronesecure.CONTROL_VPN">
            <intent-filter>
                <action android:name="com.dronescontrol.dronesecure.intent.action.START_VPN" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
